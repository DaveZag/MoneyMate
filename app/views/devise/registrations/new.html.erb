<section>
  <header  class='w-full primary-color text-white flex items-center justify-between relative pt-4 pb-4 px-2'>
    <%= link_to "Back", unauthenticated_user_path, class: 'w-fit text-base hover' %>
    <h2 class="text-xl text-center absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-fit">Sign up</h2>
  </header>

  <div class="flex justify-center absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 container mx-auto">
    <div class=" w-4/5 flex flex-col gap-4 bg-white shadow-lg p-4 md:w-3/5 md:pb-10 md:px-10 md:pt-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
          <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'py-2 px-4 border mb-2 w-full focus:outline-orange-400' %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'py-2 px-4 border mb-2 w-full focus:outline-orange-400' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6 characters minimum)", class: 'py-2 px-4 border mb-2 w-full focus:outline-orange-400' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "Confirm Password", class: 'py-2 px-4 border mb-2 w-full focus:outline-orange-400' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn primary-color px-4 mt-3 text-white' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>