<div class="flex justify-center absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 container mx-auto">
  <div class=" w-4/5 flex flex-col gap-4 bg-white shadow-lg p-4 md:w-3/5 md:pb-10 md:px-10 md:pt-5">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'py-2 px-4 border w-full focus:outline-orange-400'  %>
      </div>

      <div class="actions">
        <%= f.submit "Send me instructions", class: 'btn primary-color px-4 mt-3 text-white'  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
