    <%= form_with model: payment, url: payments_path do |form| %>
      <div class="field">
        <%= form.text_field :name, autofocus: true, class:"rounded-0", hide_label: true, placeholder: "Transaction Name", required: true %>
      </div>

      <div class="field">
        <%= form.number_field :amount, autofocus: true, class:"rounded-0", hide_label: true, step: "any", placeholder: "$0.00", required: true %>
      </div>

      <div class="field">
        <%= form.select :group_id, @groups.collect {|category| [category.name, category.id]}, hide_label: true, required: true%>
      </div>

      <div class="actions" style="margin-top: 5em">
        <%= form.submit "Save", class:"btn btn-success rounded-0 w-100 position-absolute bottom-0 start-0" %>
      </div>
    <%end%>