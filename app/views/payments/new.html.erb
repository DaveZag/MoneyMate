<section>
    <header  class='w-full primary-color text-white flex items-center justify-between relative pt-4 pb-4 px-2'>
        <%= link_to "Back", group_path(id: params[:current_group]), class: 'w-fit text-base hover md:ml-32' %>
        <h2 class="text-xl text-center w-fit  absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 md:text-2xl">Add Transaction</h2>
    </header>

    <div class="flex justify-center w-full">
        <%= form_with model: payment, url: payments_path, class:"flex flex-col gap-2" do |form| %>
            <div class="field">
                <%= form.text_field :name, autofocus: true, class:"rounded-0", placeholder: "Name", required: true, class:"py-2 px-2 border w-full focus:outline-orange-400" %>
            </div>

            <div class="field">
                <%= form.number_field :amount, autofocus: true, class:"rounded-0", step: "any", placeholder: "Amount", required: true, class:"py-2 px-2 border w-full focus:outline-orange-400" %>
            </div>

            <div class="field select-container">
                <%= form.select :group_id, @groups.collect {|group| [group.name, group.id]}, required: true%>
            </div>

            <div class="btn-container self-center">
                <%= form.submit "Save", class: "btn secondary-color text-white px-8 py-2"%>
            </div>
        <%end%>
    </div>
</section>